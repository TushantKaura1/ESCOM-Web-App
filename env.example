# Production Environment Variables
# Copy this to .env and fill in your values

# MongoDB Connection (Cloud Database)
MONGODB_URI=mongodb+srv://username:password@cluster.mongodb.net/escom

# Server Configuration
PORT=3002
NODE_ENV=production

# JWT Secret (will be auto-generated on Render)
JWT_SECRET=your-super-secret-jwt-key-here

# CORS Origins
CORS_ORIGIN=https://citisci.netlify.app

# Telegram Bot (Optional)
BOT_TOKEN=your_telegram_bot_token
WEBAPP_URL=https://citisci.netlify.app 